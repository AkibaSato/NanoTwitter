<%- include layouts/head.ejs %>
<%- include layouts/icon.ejs %>
<%- include layouts/header.ejs %>
<br>
<div class="row">
  <div class="col-4">
    <div class="user-information__border"></div>
    <div class="user-information">
      <% if (user) { %>
        <%- include components/user_info.ejs %>
      <% } else { %>
        <br>
        <a href="/login">Login</a>
        <br>
        <a href="/user/register">Signup</a>
      <% } %>
    </div>
  </div>
  <div class="col-6">
    <div class="box"></div>
    <div class="tweet-list">
      <% if (retweets.length === 0) { %>
        <div class="tweets">
          <div class="row">
            <h3>There are no retweets for this tweet.</h3>
          </div>
        </div>
      <% } else { %>
        <% for(var i = 0; i < retweets.length; i++) { %>
          <div class="tweets">
            <div class="row">
              <h3><span><a href="/user/<%= retweets[i].userId %>"> @<%= retweets[i].user.username %></a></span></h3>
            </div>
            <div class="row">
              <h4><%= retweets[i].createdAt %></h4>
            </div>
            <br>
            <hr/>
            <br>
          </div>
        <% } %>
      <% } %>
    </div>
  </div>
</div>
