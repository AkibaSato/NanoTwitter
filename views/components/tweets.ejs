<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Tweets</title>
   	<link href='https://fonts.googleapis.com/css?family=Quicksand:300,400' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Lato:400,300' rel='stylesheet' type='text/css'>
	<link href="https://netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css" rel="stylesheet">
</head>
<body>

		<ul class="timeline">
      <% for(var i = 0; i < tweets.length; i++) { %>
  			<li>
  				<div class="avatar">
            <img src="http://www.croop.cl/UI/twitter/images/doug.jpg">
  					<div class="hover">
  						<div class="icon-twitter"></div>
  					</div>
  				</div>
  				<div class="bubble-container">
  					<div class="bubble">
  					<div class="retweet">
  						<div class="icon-retweet"></div>
  					</div>
  						<h3><span><a href="/user/<%= tweets[i].user.id %>"> @<%= tweets[i].user.username %></a></span> • <%= tweets[i].createdAt.getDate() %> <%= tweets[i].createdAt.getMonth() %> <%= tweets[i].createdAt.getFullYear() %></h3><br/>
  					  <%= tweets[i].content %>
  					</div>

  					<div class="arrow"></div>
  				</div>
					<br>
					<div class="icon-mail-reply action"></div>
					<div class="icon-retweet action"></div>
					<div class="icon-star"></div>
  			</li>
      <% } %>
		</ul>
	</div>
</body>
</html>
<div class="tweet-list">
  <% for(var i = 0; i < tweets.length; i++) { %>
    <div class="tweets">
      <div class="row">
        <h2><%= tweets[i].user.fname %> <%= tweets[i].user.lname %></h2>
        <% date=new Date(Date.parse(tweets[i].createdAt)) %>
        <h3><span><a href="/user/<%= tweets[i].user.id %>"> @<%= tweets[i].user.username %></a></span> • <%= date.getDate() %> <%= date.getMonth() %> <%= date.getFullYear() %></h3>
      </div>
      <div class="row">
        <h4><%= tweets[i].content %></h4>
      </div>




      <br>
      <div class="tweet-border"></div>
      <br>
    </div>
  <% } %>
</div>
