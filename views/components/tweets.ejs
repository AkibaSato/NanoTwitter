
<div class="tweet-list">
  <% for(var i = 0; i < tweets.length; i++) { %>
    <div class="tweets">
      <div class="row">
        <h4><% if (tweets[i].originalId !== null) { %>
          Retweeted from <%= tweets[i].originalId %>
          <% } %>
        </h4>
      </div>
      <div class="row">
        <h2><%= tweets[i].user.fname %> <%= tweets[i].user.lname %></h2>
        <% date = new Date(Date.parse(tweets[i].createdAt)) %>
        <h3><span><a href="/user/<%= tweets[i].user.id %>"> @<%= tweets[i].user.username %></a></span> â€¢ <%= date.getDate() %> <%= date.getMonth() %> <%= date.getFullYear() %></h3>
      </div>
      <div class="row">
        <h4><%= tweets[i].content %></h4>
      </div>
      <div class="tweet-border"></div>
      <div class="tweet_retweet">
        <%- include modals/retweet_modal.ejs %>
      </div>




      <br>
      <div class="tweet-border"></div>
      <br>
    </div>
  <% } %>
</div>
