<%- include layouts/head.ejs %>
<%- include layouts/icon.ejs %>
<%- include layouts/header.ejs %>
<br>
<div class="row">
  <div class="col-4">
    <div class="user-information__border"></div>
    <div class="user-information">
      <% if (user) { %>
        <%- include components/user_info.ejs %>
      <% } else { %>
        <br>
        <a href="/login">Login</a>
        <br>
        <a href="/user/register">Signup</a>
      <% } %>
    </div>
  </div>
  <div class="col-6">
    <div class="box"></div>
    <div class="tweet-list">
      <% for(var i = 0; i < followers.length; i++) { %>
        <div class="tweets">
          <div class="row">
            <h2><%= followers[i].follower.fname + " " +  followers[i].follower.lname %></h2>
            <h3><span><a href="/user/<%= followers[i].follower.id %>"> @<%= followers[i].follower.username %></a></span></h3>
          </div>
          <div class="row">
          </div>
          <br>
          <hr/>
          <br>
        </div>
      <% } %>
    </div>
  </div>
</div>
