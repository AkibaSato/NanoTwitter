<%- include layouts/icon.ejs %>

<%- include layouts/header.ejs %>


<br>
<div class="row">
    <div class="col-4">
      <div class="user-information__border"></div>
        <div class="user-information">
          <%- include components/user_info.ejs %>
        </div>
    </div>
    <div class="col-6">
      <% if (req.isAuthenticated()) { %>
        <% if (req.user.id === userData.id) { %>
          <%- include components/new_tweet.ejs %>
        <% } else { %>
          <% for(var i = 0; i < followers.length; i++) { %>


            <% if (followers[i].follower.id === req.user.id) { %>
              <%- include components/unfollow.ejs %>
              <% break; %>
            <% } else if (i === followers.length - 1) { %>
              <%- include components/new_follow.ejs %>
            <% } %>
          <% } %>
        <% } %>
      <% } %>
      <%- include components/tweets.ejs %>
    </div>
</div>
